{% extends 'security.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}
    <section class="bg-light py-3 py-md-5">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-12 col-sm-10 col-md-8 col-lg-6 col-xl-5 col-xxl-4">
                    <div class="card border border-light-subtle rounded-3 shadow-sm">
                        <div class="card-body p-3 p-md-4 p-xl-5">
                            <div class="text-center mb-3">
                                <h1>Inscription</h1>
                            </div>
                            <h2 class="fs-6 fw-normal text-center text-secondary mb-4">Veuillez entrer vos informations</h2>

                            {{ form_errors(registrationForm) }}

                            {{ form_start(registrationForm) }}
                            <div class="row gy-2 overflow-hidden">
                                <div class="col-12">
                                    <div class="form-floating mb-3">
                                        {{ form_row(registrationForm.firstName, {
                                            label: 'Prénom',
                                            label_attr: {class: 'form-label'},
                                            attr: {class: 'form-control'}
                                        }) }}
                                    </div>
                                </div>
                                <div class="col-12">
                                    <div class="form-floating mb-3">
                                        {{ form_row(registrationForm.lastName, {
                                            label: 'Nom de famille',
                                            label_attr: {class: 'form-label'},
                                            attr: {class: 'form-control'}
                                        }) }}
                                    </div>
                                </div>
                                <div class="col-12">
                                    <div class="form-floating mb-3">
                                        {{ form_row(registrationForm.email, {
                                            label: 'Email',
                                            label_attr: {class: 'form-label'},
                                            attr: {class: 'form-control'}
                                        }) }}
                                    </div>
                                </div>
                                <div class="col-12">
                                    <div class="form-floating mb-3">
                                        {{ form_row(registrationForm.plainPassword, {
                                            label: 'Mot de passe',
                                            label_attr: {class: 'form-label'},
                                            attr: {class: 'form-control'}
                                        }) }}
                                    </div>
                                </div>
                                <div class="col-12">
                                    <div class="form-floating mb-3">
                                        {{ form_row(registrationForm.agreeTerms, {
                                            label: "Accepter les conditions",
                                            label_attr: {class: 'form-check-label'},
                                            attr: {class: 'form-check-input'}
                                        }) }}
                                    </div>
                                </div>

                                <div class="col-12">
                                    <div class="d-grid my-3">
                                        <button class="btn btn-primary btn-lg" type="submit">S'inscrire</button>
                                    </div>
                                </div>

                                <div class="col-12">
                                    <p class="m-0 text-secondary text-center">
                                        <a href="{{ path('app_login') }}" class="link-primary text-decoration-none">Retour à la page de connexion</a>
                                    </p>
                                </div>
                            </div>

                            {{ form_end(registrationForm) }}

                        </div>
                    </div>
                </div>

            </div>
        </div>
    </section>

{% endblock %}
